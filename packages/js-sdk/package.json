    "better-docs": "^2.7.2",
    "browserify": "^17.0.0",
    "chai": "^4.3.10",
    "chai-spies": "^1.0.0",
    "chai-string": "^1.5.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jasmine": "^4.1.3",
    "eslint-plugin-local-rules": "^2.0.0",
