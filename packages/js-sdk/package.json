    "@convertcom/js-sdk-rules": "workspace:^",
    "@convertcom/js-sdk-segments": "workspace:^",
    "@convertcom/js-sdk-types": "workspace:^",
    "@convertcom/js-sdk-utils": "workspace:^"
  },
