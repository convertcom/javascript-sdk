{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "./lib/",
    "allowJs": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@convertcom/js-sdk-enums": ["../enums"],
      "@convertcom/js-sdk-enums/*": ["../enums/src/*"]
    }
  }
}
